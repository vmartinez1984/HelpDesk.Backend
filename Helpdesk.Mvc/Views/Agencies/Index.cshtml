@model IEnumerable<Helpdesk.Core.Dtos.Outputs.AgencyDtoOut>
@{
    ViewBag.Title = "Agencias";
}

<div class="container">
    <h2>Lista de agencias</h2>
    <p>
        @Html.ActionLink("Agregar nuevo", "Create")
    </p>
    <table class="table">
         <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRegistration)
            </th>
            <th></th>
        </tr>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AgencyTypeName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateRegistration)
                </td>
                <td>
                    <a href="~/Projects/Edit/@item.Id" class="btn btn-warning text-white">
                        <i class="fas fa-edit text-white"></i>
                        Editar
                    </a>

                    <a href="~/Projects/Delete/@item.Id" class="btn btn-danger">
                        <i class="fas fa-eraser text-white"></i>
                        Borrar
                    </a>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>