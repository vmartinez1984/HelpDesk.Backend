                        <label asp-for="DateStart" class="control-label"></label>
                        <input asp-for="DateStart" class="form-control" maxlength="5" placeholder="Fecha inicio" onkeyup="onkeyupZipCode(event);"/>
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DateEnd" class="control-label"></label>                        
                        <input asp-for="DateEnd" class="form-control" maxlength="50" placeholder="Fecha fin"/>
                        <span asp-validation-for="DateEnd" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Notes" class="control-label"></label>                        
