                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AgencyTypeId" class="control-label"></label>
                        <select asp-for="AgencyTypeId" class="form-select" asp-items="ViewBag.ListAgencyType">
                            <option value="">Seleccione</option>
