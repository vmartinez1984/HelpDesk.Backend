@using Helpdesk.Core.Dtos
@model FormAgencyDto

@{
    ViewData["Title"] = "Responsiva";
    Layout = "_LayoutPdf";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Responsiva/h5>
            </div>
            <div class="card-body">
                <h6 class="text-info">Datos de la agencia</h6>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ProjectName)
                    </dd> 
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AgencyCode)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AgencyCode)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AgencyName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AgencyName)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AgencyTypeName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AgencyTypeName)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AgencyAddress)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AgencyAddress)
                    </dd>
                    <dt class = "col-sm-2"> 
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                     <dt class = "col-sm-2"> 
                        @Html.DisplayNameFor(model => model.TextResponsive)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.TextResponsive)
                    </dd>
                </dl>

                <h6 class="text-info">Lista de dispositivos</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ListDevices[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListDevices[0].SerialNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListDevices[0].DateStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListDevices[0].DateEnd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListDevices[0].DeviceStateName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.ListDevices)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateStart)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.DateEnd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeviceStateName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                    
                <h6 class="text-info">Datos del responsable</h6>
               <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Person.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Person.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Person.LastName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Person.LastName)
                    </dd>                    
                </dl>
               
            </div>
        </div>
    </div>
</div>