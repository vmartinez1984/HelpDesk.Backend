@model Helpdesk.Core.Dtos.Inputs.PersonDtoIn

@{
    ViewBag.Title = "Agregar persona";
}

<div class="row">
    <h2>@ViewBag.Title</h2>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Proyecto</label>
                <select class="form-select" id="selectProject" asp-items="ViewBag.ListProjects" onchange="onchange_SelectProject();">
                    <option value="">Seleccione</option>
                </select>                
            </div>
            
            <div class="form-group">
                <label asp-for="AgencyId" class="control-label"></label>
                <select asp-for="AgencyId" class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="AgencyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" maxlength="255"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" maxlength="255"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" maxlength="1000"/>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <br/>    
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src=""></script>
}