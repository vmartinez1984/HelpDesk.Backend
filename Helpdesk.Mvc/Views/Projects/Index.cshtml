@model IEnumerable<Helpdesk.Core.Dtos.Outputs.ProjectDtoOut>
@{
    ViewBag.Title = "Proyecto";
}
<h1 class="h3 mb-3">Proyectos</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Lista de proyectos</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <a asp-action="Create">
                            <i class="align-middle" data-feather="plus-circle"></i>
                            <span class="align-middle">Agregar nuevo</span>
                        </a>
                    </div>

                    <div class="col">
                        @if (ViewBag.IsActivate)
                        {
                            <a asp-action="Index" asp-route-isActivate="false">
                                <i class="align-middle" data-feather="x-square"></i>
                                <span class="align-middle">Lista de proyectos eliminados</span>
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-route-isActivate="true">
                                <i class="align-middle" data-feather="check-circle"></i>
                                <span class="align-middle">Lista de proyectos</span>
                            </a>
                        }
                    </div>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateRegistration)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateRegistration)
                            </td>
                            <td>
                                <a href="~/Projects/Details/@item.Id" class="btn btn-info text-white">
                                    <i class="align-middle" data-feather="clipboard"></i>
                                    <span class="align-middle">Detalles</span>
                                </a>

                                <a href="~/Projects/Edit/@item.Id" class="btn btn-warning text-white">
                                    <i class="align-middle" data-feather="edit"></i>
                                    <span class="align-middle">Editar</span>
                                </a>

                                @if (ViewBag.IsActivate)
                                {
                                    <a href="~/Projects/Delete/@item.Id" class="btn btn-danger">
                                        <i class="align-middle" data-feather="delete"></i>
                                        <span class="align-middle">Borrar</span>
                                    </a>
                                }else{
                                    <a href="~/Projects/Activate/@item.Id" class="btn btn-success">
                                        <i class="align-middle" data-feather="check-circle"></i>
                                        <span class="align-middle">Activar</span>
                                    </a>
                                }
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>